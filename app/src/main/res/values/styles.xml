<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <!-- TextView style -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">>
        <item name="android:minHeight">48dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="title">@string/app_name</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:backgroundTint">@color/button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">@dimen/_24ssp</item>
        <item name="android:layout_height">@dimen/_64sdp</item>
        <item name="android:layout_marginStart">@dimen/space_xxlarge</item>
        <item name="android:layout_marginEnd">@dimen/space_large</item>
    </style>

    <style name="MediumTextAppearance">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/half_black</item>
    </style>

    <style name="NormalTextAppearance">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextAppearance70" parent="MediumTextAppearance">
        <item name="android:alpha">0.7</item>
    </style>

    <style name="MediumTextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>